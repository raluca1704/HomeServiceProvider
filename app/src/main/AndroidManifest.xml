<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeServiceProvider"
        tools:targetApi="31">

        <activity
            android:name=".navDrawer"
            android:exported="true"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/Theme.HomeServiceProvider.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.HomeServiceProvider.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:label="Register"
            android:theme="@style/Theme.HomeServiceProvider.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="Home"
            android:theme="@style/Theme.HomeServiceProvider" />
        <activity
            android:name=".ChatPageActivity"
            android:theme="@style/Theme.HomeServiceProvider.NoActionBar" />
        <activity
            android:name=".UserListActivity"
            android:theme="@style/Theme.HomeServiceProvider.NoActionBar" />
        <activity
            android:name=".ui.account.ProfileActivity"
            android:theme="@style/Theme.HomeServiceProvider.NoActionBar" />
        <activity
            android:name=".ui.account.EditProfileActivity"
            android:theme="@style/Theme.HomeServiceProvider.NoActionBar" />
        <activity
            android:name=".ui.createnewservice.CreateNewServiceActivity"
            android:theme="@style/Theme.HomeServiceProvider.NoActionBar" />
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".ReviewActivity" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".MyMessagesActivity" />

    </application>

</manifest>